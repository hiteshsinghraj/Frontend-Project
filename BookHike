    <!-- Shopping Cart Modal -->
    <div id="cart-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
        <div class="absolute right-0 top-0 h-full bg-white w-full max-w-md shadow-xl transform transition-transform duration-300 ease-in-out">
            <div class="flex justify-between items-center border-b p-4">
                <h3 class="text-lg font-bold">Your Shopping Cart (<span id="cart-modal-count">0</span>)</h3>
                <button id="close-cart" class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <div id="cart-items" class="p-4 overflow-y-auto" style="max-height: 60vh;">
                <p id="empty-cart-message" class="text-gray-500 text-center py-8">Your cart is empty</p>
                <!-- Cart items will be dynamically inserted here -->
            </div>
            
            <div class="border-t p-4 bg-gray-50">
                <div class="flex justify-between mb-4">
                    <span class="font-medium">Subtotal:</span>
                    <span id="cart-subtotal" class="font-bold">$0.00</span>
                </div>
                <button id="checkout-btn" class="w-full bg-indigo-600 text-white py-3 rounded-md hover:bg-indigo-700 transition font-medium">Proceed to Checkout</button>
                <button id="continue-shopping" class="w-full mt-2 border border-indigo-600 text-indigo-600 py-3 rounded-md hover:bg-indigo-50 transition font-medium">Continue Shopping</button>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Shopping cart functionality
            const cart = [];
            const cartBtn = document.getElementById('cart-btn');
            const cartModal = document.getElementById('cart-modal');
            const closeCartBtn = document.getElementById('close-cart');
            const cartCount = document.getElementById('cart-count');
            const cartModalCount = document.getElementById('cart-modal-count');
            const cartItems = document.getElementById('cart-items');
            const emptyCartMessage = document.getElementById('empty-cart-message');
            const cartSubtotal = document.getElementById('cart-subtotal');
            const checkoutBtn = document.getElementById('checkout-btn');
            const continueShopping = document.getElementById('continue-shopping');
            const addToCartButtons = document.querySelectorAll('.add-to-cart');
            const mobileMenuBtn = document.getElementById('mobile-menu-btn');
            const mobileMenu = document.getElementById('mobile-menu');

            // Mobile menu toggle
            mobileMenuBtn.addEventListener('click', function() {
                mobileMenu.classList.toggle('open');
            });

            // Add to cart functionality
            addToCartButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const id = parseInt(this.getAttribute('data-id'));
                    const title = this.getAttribute('data-title');
                    const price = parseFloat(this.getAttribute('data-price'));
                    const image = this.getAttribute('data-image');
                    
                    // Check if item already exists in cart
                    const existingItem = cart.find(item => item.id === id);
                    
                    if (existingItem) {
                        existingItem.quantity += 1;
                    } else {
                        cart.push({
                            id,
                            title,
                            price,
                            image,
                            quantity: 1
                        });
                    }
                    
                    updateCart();
                    
                    // Visual feedback
                    const originalText = this.textContent;
                    this.textContent = 'Added!';
                    this.style.backgroundColor = '#10b981';
                    this.style.color = 'white';
                    
                    setTimeout(() => {
                        this.textContent = originalText;
                        this.style.backgroundColor = '#e0e7ff';
                        this.style.color = '#4f46e5';
                    }, 1000);
                });
            });
            
            // Update cart UI
            function updateCart() {
                cartCount.textContent = cart.reduce((total, item) => total + item.quantity, 0);
                cartModalCount.textContent = cart.reduce((total, item) => total + item.quantity, 0);
                
                if (cart.length === 0) {
                    emptyCartMessage.style.display = 'block';
                    cartItems.innerHTML = '';
                    checkoutBtn.disabled = true;
                } else {
                    emptyCartMessage.style.display = 'none';
                    renderCartItems();
                    checkoutBtn.disabled = false;
                }
                
                updateSubtotal();
            }
            
            // Render cart items
            function renderCartItems() {
                cartItems.innerHTML = '';
                
                cart.forEach(item => {
                    const itemElement = document.createElement('div');
                    itemElement.className = 'cart-item p-3 mb-3 bg-gray-50 rounded-lg flex';
                    itemElement.dataset.id = item.id;
                    
                    itemElement.innerHTML = `
                        <div class="w-16 h-16 mr-4 flex-shrink-0">
                            <img src="${item.image}" alt="${item.title} book cover" class="w-full h-full object-cover">
                        </div>
                        <div class="flex-grow">
                            <h4 class="font-medium text-gray-800">${item.title}</h4>
                            <div class="flex justify-between items-center mt-2">
                                <div class="flex items-center">
                                    <button class="decrement-item text-gray-500 hover:text-indigo-600 px-2">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <span class="quantity mx-2">${item.quantity}</span>
                                    <button class="increment-item text-gray-500 hover:text-indigo-600 px-2">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                                <div>
                                    <span class="item-price font-medium">$${(item.price * item.quantity).toFixed(2)}</span>
                                </div>
                            </div>
                        </div>
                        <button class="remove-item ml-4 text-gray-400 hover:text-red-500">
                            <i class="fas fa-trash"></i>
                        </button>
                    `;
                    
                    cartItems.appendChild(itemElement);
                });
                
                // Add event listeners for quantity changes and removal
                document.querySelectorAll('.increment-item').forEach(button => {
                    button.addEventListener('click', function() {
                        const id = parseInt(this.closest('.cart-item').dataset.id);
                        const item = cart.find(item => item.id === id);
                        if (item) {
                            item.quantity += 1;
                            updateCart();
                        }
                    });
                });
                
                document.querySelectorAll('.decrement-item').forEach(button => {
                    button.addEventListener('click', function() {
                        const id = parseInt(this.closest('.cart-item').dataset.id);
                        const item = cart.find(item => item.id === id);
                        if (item) {
                            if (item.quantity > 1) {
                                item.quantity -= 1;
                            } else {
                                removeFromCart(id);
                            }
                            updateCart();
                        }
                    });
                });
                
                document.querySelectorAll('.remove-item').forEach(button => {
                    button.addEventListener('click', function() {
                        const id = parseInt(this.closest('.cart-item').dataset.id);
                        removeFromCart(id);
                        updateCart();
                    });
                });
            }
            
            // Remove item from cart
            function removeFromCart(id) {
                const index = cart.findIndex(item => item.id === id);
                if (index !== -1) {
                    cart.splice(index, 1);
                }
            }
            
            // Update subtotal
            function updateSubtotal() {
                const subtotal = cart.reduce((total, item) => total + (item.price * item.quantity), 0);
                cartSubtotal.textContent = `$${subtotal.toFixed(2)}`;
            }
            
            // Toggle cart modal
            cartBtn.addEventListener('click', function() {
                cartModal.classList.remove('hidden');
            });
            
            closeCartBtn.addEventListener('click', function() {
                cartModal.classList.add('hidden');
            });
            
            continueShopping.addEventListener('click', function() {
                cartModal.classList.add('hidden');
            });
            
            // Click outside to close
            cartModal.addEventListener('click', function(e) {
                if (e.target === cartModal) {
                    cartModal.classList.add('hidden');
                }
            });
            
            // Checkout button
            checkoutBtn.addEventListener('click', function() {
                alert('Checkout functionality would be implemented here.');
            });
        });                                   
    </script>
</body>
</html>

